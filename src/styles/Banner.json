{
    
    "bgimage":{
        
        
        "height":"100dvh",
        "display":"flex",
        "justify-content":"center",
        "align-items":"center",
        "flex-direction":"column",
        "position":"relative",
        "jumpingButton":{
            "background":"rgba( 255, 255, 255, 0.6 )",
            "padding":"3px 10px",
            "border-radius":"50%",
            "text-align":"center",
            "position":"fixed",
            "zIndex":"1",
            "bottom":"5%"
        }
    },

    "glass":{
        "background": "rgba( 255, 255, 255, 0.1 )",
        "boxShadow": "0 8px 32px 0 rgba( 31, 38, 135, 0.37 )",
        "backdropFilter": "blur( 5px )",
        "borderRadius": "10px",
        "border": "1px solid rgba( 255, 255, 255, 0.18 )",
        "minWidth":"50%",
        "maxWidth":"80%",
        "minHeight":"50%",
        "display":"flex",
        "flexDirection":"column",
        "justify-content":"space-between",
        "padding":"20px",
        "marginBottom":"40px"

    },

    "content":{
        "display":"flex",
        "flexDirection":"column",
        "alignItems":"center",
        "greet":{
            "font-size":"3rem",
            "textTransform":"capitalize",
            "text-align":"center"
        },
        "main":{
            "color":"white",
            "font-size":"3rem",
            "font-weight":"bold",
            "margin-bottom":"10px",
            "textTransform":"capitalize",
            "text-align":"center"
        },
        "badge":{
            "background":"rgba( 255, 255, 255, 0.3 )",
            "color":"#000",
            "padding":"5px 10px",
            "border-radius":"10px",
            "margin-bottom":"10px",
            "text-align":"center"
        }
    }
}