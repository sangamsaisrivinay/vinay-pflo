{
    "projectsContainer":{
        "display":"flex",
        "flexDirection":"column",
        "justifyContent":"space-around",
        "alignItems":"center",
        "flexWrap":"wrap",
        "width":"100%",
        "minHeight":"100vh",
        "background":"linear-gradient(-20deg, #2b5876 0%, #4e4376 100%)",
        "padding":"20px 0"
    },
    "title":{
        "color":"white",
        "textTransform":"capitalize",
        "fontWeight":"bold",
        "fontSize":"2em",
        "marginBottom":"20px"
    },
    "cardsContainer":{
        "display":"flex",
        "flexDirection":"row",
        "justifyContent":"center",
        "alignItems":"space-around",
        "flexWrap":"wrap",
        "width":"100%",
        "minHeight":"50%",
        "maxHeight":"80%"
    },
    "glass":{
        "minWidth":"250px",
        "maxWidth":"25%",
        "display":"flex",
        "flexDirection":"column",
        "justifyContent":"space-around",
        "alignItems":"center",
        "padding":"20px",
        "margin":"10px 10px",
        "background":" rgba( 255, 255, 255, 0.25 )",
        "boxShadow": "0 8px 32px 0 rgba( 0, 0, 0, 0.37 )",
        "backdropFilter": "blur( 4px )",
        "borderRadius": "10px",
        "border": "1px solid rgba( 255, 255, 255, 0.18 )",
        "banner":{
            "width":"100%",
            "height":"200px",
            "backgroundSize":"cover",
            "backgroundPosition":"center",
            "borderRadius":"10px",
            "marginBottom":"10px"
        },
        "text":{
            "display":"flex",
            "flexDirection":"column",
            "justifyContent":"space-around",
            "alignItems":"center",
            "title":{
                "color":"white",
                "textTransform":"capitalize",
                "fontWeight":"bold",
                "fontSize":"20px",
                "textAlign":"center"
            },
            "description":{
                "color":"white",
                "textAlign":"justify",
                "fontSize":"1.1em",
                "marginBottom":"10px"
            },
            "link":{
                "background":"#fff",
                "padding":"0 10px 5px 10px",
                "borderRadius":"5px",
                "linkText":{
                    "color":"#000",
                    "textDecoration":"none",
                    "fontWeight":"bold",
                    "fontSize":"0.8em"
                }
            }
        }
    }
}