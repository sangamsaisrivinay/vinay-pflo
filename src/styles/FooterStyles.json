{
    "footerContainer":{
        "minHeight": "15vh",
        "backgroundColor": "#000",
        "display": "flex",
        "flexWrap": "wrap",
        "flexDirection": "row",
        "justifyContent": "space-around",
        "color": "#fff",
        "socialContainer":{ 
            "background":"black", 
            "minWidth":"50%",
            "maxWidth":"80%",
            "display": "flex",
            "flexDirection": "row",
            "justifyContent": "space-around",
            "alignItems": "center",
            "zIndex": "1",
            "icons":{
                "color":"#fff",
                "fontSize":"1.5rem",
                "transition":"all 0.5s ease-in-out",
                "textDecoration":"none",
                "padding":"0 5px",

                "&:hover":{
                    "color":"#000",
                    "transform":"scale(1.2)"
                }
            }
        },
        "copyRightContainer":{
            "display": "flex",
            "flexDirection": "row",
            "justifyContent": "center",
            "alignItems": "center",
            "textTransform": "capitalize",
            "padding": "0 10px",
            "fontSize": "1.1rem",
            "zIndex": "1",
            "background":"black"
        }

    }
}